{% extends "base.html.twig" %}

{% block body %}
    <div class="content">
        <h2>Ajouter un Ouvrage</h2>

        <div class="mx-5">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6">
                    <div class="d-flex">
                        {{ form_row(form.librairies) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">{{ form_row(form.author) }}</div>
                <div class="no_arrow col-md-9">{{ form_row(form.title) }}</div>
            </div>
            <div class="row">
                <div class="col-md-10">{{ form_row(form.city) }}</div>
                <div class="no_arrow col-md-2">{{ form_row(form.editor) }}</div>
            </div>
            <div class="row">
                <div class="col-md-2">{{ form_row(form.year) }}</div>
                <div class="col-md-2">{{ form_row(form.quantity) }}</div>
                <div class="no_arrow col-md-2">{{ form_row(form.pages) }}</div>
            </div>
            <div class="row">
                <div class="col-md-10">{{ form_row(form.notice) }}</div>
                <div class="no_arrow col-md-2">{{ form_row(form.rentNumber) }}</div>
            </div>
            <hr>
            <div class="row">
                {{ form_row(form.submit) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>


{% endblock %}
