{% extends "base.html.twig" %}

{% block body %}

    <div class="content">
        <div class="d-flex justify-content-between">
            {% include 'objects/objects/navbar_objects.html.twig' %}

            <div class="d-flex sort_item_toolbar px-2">
                <div>
                    <label for="media_form_name" class="d-flex">
                        <span class="btn btn-vodou"><i class="fa-solid fa-plus"></i></span>
                        <a href="{{ path('delete_objects_all_img', {id:object.id}) }}" class="btn" title="Tout supprimer" onclick="return confirm('Etes vous sûr de vouloir supprimer toutes les images de cet objet ?')">
                            <i class="fa-solid fa-dumpster"></i>
                        </a>
                        {{ form_start(form) }}
                        {{ form_row(form.name) }}
                        {{ form_row(form.submit) }}
                        {{ form_end(form) }}
                    </label>
                </div>
            </div>
        </div>

        <div class="d-flex flex-wrap pt-2 {{ object.videos.count == 0 ? 'justify-content-center' }}">
                {% if object.videos.count > 0 %}
                    {% for vid in object.videos%}
                        <!-- 16:9 aspect ratio -->
                        <div class="card_media p-2 mb-3 m-2">
                            <div>
                                <video controls>
                                    <source src="{{ vid.name|video }}">
                                </video>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="d-flex align-items-end">{{ vid.code }}</span>
                                <div>
                                    <a href="{{ vid.name|video }}" download class="btn btn-vodou"><i class="fa-solid fa-download"></i></a>
                                    <a href="{{ path('delete_objects_vid', {id:vid.id, object:object.id}) }}" title="Supprimer" class="btn btn-vodou"><i class="fa-solid fa-trash"></i></a>
                                </div>

                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="d-flex flex-column text-center pt-5 pb-5">
                        <p class="fs-2"><i class="fa-solid fa-ban"></i></p>
                        <p>Cette objet n'a pas de vidéo</p>
                    </div>
                {% endif %}

            </div>

    </div>
{% endblock %}