{% extends "base.html.twig" %}

{% block body %}

    <div class="content">
        {% include 'objects/objects/navbar_objects.html.twig' %}

        <div class="d-flex sort_item_toolbar px-2">
            <div>
                <label for="media_form_name">
                    <span class="btn btn-vodou"><i class="fa-solid fa-plus"></i></span>
                    <a href="" class="btn" title="Tout supprimer">
                        <i class="fa-solid fa-dumpster"></i>
                    </a>
                    {{ form_start(form) }}
                        {{ form_row(form.name) }}
                        {{ form_row(form.submit) }}
                    {{ form_end(form) }}
                </label>
            </div>
            <div>

            </div>
        </div>

        <div class="d-flex flex-wrap">

            {% for img in object.images%}
                <div class="card_media p-2 mb-3 m-2">
                    <div class="img-ratio" style="--ratio:80%;">
                        <div class="img">
                            <img src="{{ asset(img.name|image) }}" alt="">
                        </div>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>{{ img.code }}</span>
                        <a href=""><i class="fa-solid fa-trash"></i></a>
                    </div>
                </div>
            {% endfor %}


        </div>




    </div>
{% endblock %}

